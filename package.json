{
  "name": "@freik/web-utils",
  "version": "0.5.0",
  "description": "Kevin Frei's Web utilities",
  "module": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "test": "jest --config jest.jsdom.js",
    "watch": "jest --config jest.jsdom.js --watch",
    "clean": "rimraf lib && rimraf \".*.tsbuildinfo\"",
    "release": "yarn clean && tsc --project tsconfig.cjs.opt.json && tsc --project tsconfig.esm.opt.json && yarn ftool minify -i -r lib",
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "cleanbuild": "yarn clean && yarn build",
    "debug": "rimraf lib && tsc -p tsdebug.json",
    "prepare": "yarn release",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn run lint && yarn pinst --disable",
    "postpublish": "yarn pinst --enable",
    "format": "ftool format",
    "lint": "yarn run eslint --fix --ext .ts src",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit -p tsconfig.json",
    "chk": "yarn format && yarn lint && yarn compile && yarn test"
  },
  "repository": "github:kevinfrei/web-utils",
  "author": "kevinfrei@hotmail.com",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/kevinfrei/web-utils/issues"
  },
  "homepage": "https://github.com/kevinfrei/web-utils#readme",
  "peerDependencies": {
    "@fluentui/react": ">=8.50.0",
    "@fluentui/react-components": ">=9.21.0",
    "@fluentui/react-hooks": ">=8.1.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "recoil": ">=0.4.1"
  },
  "peerDependenciesMeta": {
    "@fluentui/react": {
      "optional": true
    },
    "@fluentui/react-components": {
      "optional": true
    },
    "@fluentui/react-hooks": {
      "optional": true
    },
    "recoil": {
      "optional": true
    }
  },
  "devDependencies": {
    "@fluentui/react": "^8.109.9",
    "@fluentui/react-components": "^9.21.0",
    "@fluentui/react-hooks": "^8.6.26",
    "@freik/build-tools": "^3.5.0",
    "@types/debug": "^4.1.8",
    "@types/jest": "^29.5.2",
    "@types/react": "^17.0.60",
    "@types/react-dom": "^17.0.20",
    "@types/react-test-renderer": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^17.0.2",
    "recoil": "^0.7.7",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "files": ["lib/**/*"],
  "engines": {
    "node": "^14.13.1 || >= 16.0.0"
  },
  "packageManager": "yarn@3.5.0",
  "dependencies": {
    "@freik/typechk": "^0.1.0",
    "debug": "^4.3.4"
  }
}
